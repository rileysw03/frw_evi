export default {
  async fetch(request) {
    // Define the external API endpoint
    const apiUrl = "https://api.weather.gov/products/types/EVI"; // Replace with the actual API

    try {
      // Fetch data from the external API
      const response = await fetch(apiUrl);
      const data = await response.json();

      // Generate placefile content
      let placefile = "Title: Custom Placefile\n";
      placefile += "Refresh: 60\n";
      placefile += "Color: 255 0 0\n"; // Red color (customizable)

      // Parse API data into placefile format
      data.forEach((item) => {
        placefile += `Object: ${item.lat}, ${item.lon}\n`;
        placefile += `  Icon: 0,0,10,10,"circle"\n`;
        placefile += `  Text: 0,0,1,"${item.label}"\n`;
      });

      // Return as text/plain response
      return new Response(placefile, {
        headers: { "Content-Type": "text/plain" },
      });
    } catch (error) {
      return new Response("Error fetching data", { status: 500 });
    }
  },
};
